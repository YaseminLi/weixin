/* pages/posts/post-details/post-details.wxss */

.container {
  display: flex;
  flex-direction:column;
}

.head-image {
  width: 100%;
  height: 400rpx
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left:50%;
  margin-left: -51rpx;
  top:150rpx;
  opacity: 0.6
}
.author-date {
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
/* author-date下的第二个元素且为text */
.author-date text:nth-child(2){
   font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  color: #666;
}
/* .author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  color: #666;
} */
.const-text {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  /* vertical-align: middle; */
}

.title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
}

.circle-img image {
  width: 80rpx;
  height: 80rpx;
}

.share-img {
  margin-left: 30rpx;
}
.horizon{
  width:660rpx;
  height: 1px;
  margin:0 auto;
  position: relative;
  background: #e5e5e5;
  /* 把图像的上边缘设置在其包含元素上边缘之下 39 像素高的位置： */
  top: 39rpx;
  z-index: -1
}
.detail{
  margin: 20rpx 30rpx 0 30rpx;
  color: #666;
  letter-spacing: 2rpx;
  line-height: 44rpx
}

