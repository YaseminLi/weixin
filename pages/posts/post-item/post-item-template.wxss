@import '../post-like/post-like-template.wxss';
.post-author-date {
  margin: 10rpx 0 0 10rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
}

.post-date {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.post-title {
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
  margin: 10rpx 0 10rpx 10rpx;
}

.post-image {
  width: 100%;
  height: 450rpx;
  margin-bottom: 15px;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}


.post-container {
  padding-bottom: 10rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  display: flex;
  flex-flow: column;
}
