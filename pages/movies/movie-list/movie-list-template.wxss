@import '../movie/movie-template.wxss';

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx
}

.inner-container {
  margin: 0 auto 20rpx;
}

.movie-list-container .movie-head {
  padding: 20rpx 20rpx 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.movie-list-container .movie-head .slogan {
  font-size: 24rpx;
}

.movie-list-container .movie-head .more .more-text {
  color: #1f4ba5;
  margin-right: 10rpx;
}

.movie-list-container .movie-head .more .more-img {
  width: 9rpx;
  height: 16rpx;
}

.movies-container {
  display: flex;
  flex-direction: row;
}
